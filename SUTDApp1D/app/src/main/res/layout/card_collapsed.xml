<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/expand_padding">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/expand_padding">
        <TextView
            android:id="@+id/card_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/event_name_text_size"
            android:textColor="@android:color/black"
            />
        <ImageButton
            android:id="@+id/expand_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_expand_more_black_24dp"
            android:background="@color/transparent"
            />
        <TextView
            android:id="@+id/card_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_event_name"
            android:maxLines="3"
            android:text="@string/event_details"
            android:textColor="@color/darkGray"
            android:textSize="@dimen/detail_text_size" />

        <ImageButton
            android:id="@+id/card_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_details"
            android:layout_toStartOf="@id/card_edit"
            android:padding="8dp"
            android:src="@drawable/ic_delete_black"
            android:tint="@color/darkGray"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/card_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_details"
            android:layout_alignParentEnd="true"
            android:padding="8dp"
            android:src="@drawable/ic_edit_black"
            android:tint="@color/darkGray"
            android:background="@android:color/transparent"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>