<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/event_card_height"
        android:layout_margin="@dimen/expand_padding">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/expand_padding"
            android:paddingEnd="@dimen/expand_padding"
            android:paddingTop="@dimen/expand_padding"
            >
            <CheckedTextView
                android:id="@+id/tab_event_name1"
                android:checked="true"
                android:checkMarkTint="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dance Training"
                android:textSize="@dimen/event_name_text_size"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:clickable="true"
                android:focusable="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tab_event_name1"
                android:maxLines="3"
                android:text="Today, 19:00 - 21:00, DS 5"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/detail_text_size" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/event_card_height"
        android:layout_margin="@dimen/expand_padding">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/expand_padding"
            android:paddingEnd="@dimen/expand_padding"
            android:paddingTop="@dimen/expand_padding"
            >
            <CheckedTextView
                android:id="@+id/tab_event_name"
                android:checked="true"
                android:checkMarkTint="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dance Training"
                android:textSize="@dimen/event_name_text_size"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:clickable="true"
                android:focusable="true"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tab_event_name"
                android:maxLines="3"
                android:text="Friday, 19:00 - 21:00, DS 5"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/detail_text_size" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>

