<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/event_card_height"
        android:layout_marginTop="@dimen/expand_padding"
        android:layout_marginLeft="@dimen/expand_padding"
        android:layout_marginRight="@dimen/expand_padding"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/expand_padding"
            android:paddingEnd="@dimen/expand_padding"
            android:paddingTop="@dimen/expand_padding"
            >
            <TextView
                android:id="@+id/tab_event_name1"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hostel Event 1"
                android:textSize="@dimen/event_name_text_size"
                />
            <CheckBox
                android:id="@+id/tab_event_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:checked="true"
                android:buttonTint="@color/colorAccent"/>
            <TextView
                android:id="@+id/tab_event_details1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tab_event_name1"
                android:maxLines="3"
                android:text="Today, 21:30 - 22:30, Blk 55"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/detail_text_size" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>

