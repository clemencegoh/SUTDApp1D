<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Event Details -->
    <style name="detail_titles">
        <item name="android:layout_marginLeft">@dimen/detail_titles_horizontal</item>
        <item name="android:layout_marginRight">@dimen/detail_titles_horizontal</item>
        <item name="android:textSize">@dimen/detail_titles_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detail_fields">
        <item name="android:layout_marginLeft">@dimen/detail_titles_horizontal</item>
        <item name="android:layout_marginRight">@dimen/detail_titles_horizontal</item>
        <item name="android:textSize">@dimen/detail_text_size</item>
        <item name="android:ems">10</item>
    </style>
</resources>
